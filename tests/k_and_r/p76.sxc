/* a reverse polish calculator slighly modified to be in one file */
(#include <stdio.h>)
(#include <stdlib.h>) 

(#define MAXOP 100)	/* max size of operand or operator */
(#define NUMBER '0)	/* signal that a number was found */

(int getop (([] char)))
(void push ((double)))
(double pop (void))

(int main ()
     (var int type)
     (var double op2)
     (var char ([] s MAXOP))

     (while (!= (= type (getop s)) EOF)
       (switch type
	       (NUMBER
		(push (atof s))
		break)
	       ('+
		(push (+ (pop) (pop)))
		break)
	       ('*
		(push (* (pop) (pop)))
		break)
	       ('-
		(= op2 (pop))
		(push (- (pop) op2))
		break)
	       ('/
		(= op2 (pop))
		(if (!= op2 0.0)
		    (push (/ (pop) op2))
		    (else
		     (printf "error: zero divisor\n")))
		break)
	       ('\n
		(printf "\t%.8g\n" (pop))
		break)
	       (default
		   (printf "error: unknown command %s\n" s)
		   break)))
     (return 0))

/* push/pop functions */
(#define MAXVAL 100)

(var int (= sp 0))
(var double ([] val MAXVAL))

/* push: push f onto value stack */
(void push ((double f))
      (if (< sp MAXVAL)
	  (= ([] val (sp ++)) f)
	  (else
	   (printf "error: stack full, can't push %g\n" f))))

/* pop: pop and return top value from stack */
(double pop (void)
	(if (> sp 0)
	    (return ([] val (-- sp)))
	    (else
	     (printf "error: stack empty\n")))
	(return 0.0))

/* getop */

(#include <ctype.h>)

(int getch (void))
(void ungetch ((int)))

/* getop: get next operator or numeric operand */
(int getop ((char ([] s)))
     (var int i c)

     (while (|| (== (= ([] s 0) c (getch)) ' ) (== c '\t)))

     (= ([] s 1) '\0)
     (if (&& (! (isdigit c)) (!= c '.))
	 (return c))  /* not a number */

     (= i 0)
     (if (isdigit c) /* collect integer part */
	 (while (isdigit (= ([] s (++ i)) c (getch)))))

     (if (== c '.)
	 (while (isdigit (= ([] s (++ i)) c (getch)))))

     (= ([] s i) '\0)

     (if (!= c EOF)
	 (ungetch c))

     (return NUMBER))

(#define BUFSIZE 100)

(var char ([] buf BUFSIZE))	/* buffer got ungetch */
(var int (= bufp 0))		/* next free position in buf */

(int getch (void) /* get a (possibly pushed back) character */
     (return (? (> bufp 0) ([] buf (-- bufp)) (getchar))))

(void ungetch ((int c)) /* push character back on input */
      (if (>= bufp BUFSIZE)
	  (printf "ungetch: too many characters")
	  (else
	   (= ([] buf (bufp ++)) c))))
	 
     

	 
     
     